@model IEnumerable<programmeringmed.NetProjekt.Models.WorkoutExerciseModel>

@{
    ViewData["Title"] = "Index";
}

<div class="flex">
    <h1>Workout Exercises</h1>
    <div class="mt-2">
        <a class="createBtn " asp-action="Create">Create New</a>
    </div>
</div>
<hr>
<table class="table">
    <thead>
        <tr>
            <th>
                Workout Id <!-- Lägg till en kolumn för Workout Id -->
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Exercise.ExerciseName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.WorkoutId) <!-- Visa Workout Id -->
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Exercise.ExerciseName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
