@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - programmeringmed.NetProjekt</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/programmeringmed.NetProjekt.styles.css" asp-append-version="true" />
</head>

<body>
    <div>
        <nav class="desktop">
            @if (SignInManager.IsSignedIn(User))
            {
                <a class="" asp-area="" asp-controller="Home" asp-action="IndexLoggedIn"> <img class="logo" src="/Images/logo2.svg" alt=""> </a>
            }
            else
            {
                <a class="" asp-area="" asp-controller="Home" asp-action="Index"> <img class="logo" src="/Images/logo2.svg" alt=""> </a>
            }

            @if (SignInManager.IsSignedIn(User))
            {

                <ul>

                    <li>
                        <img src="/Images/homev.png" alt="">
                        <a class="" asp-area="" asp-controller="Home" asp-action="IndexLoggedIn">Home</a>
                    </li>
                    <li>
                        <img src="/Images/activityv.png" alt="">
                        <a class="" asp-area="" asp-controller="Workout" asp-action="Index">Activity</a>
                    </li>
                    <li>
                        <img src="/Images/plusv.png" alt="">
                        <a class="" asp-area="" asp-controller="Workout" asp-action="Create">Add Data</a>
                    </li>
                    <li>
                        <img src="/Images/graphv.png" alt="">
                        <a class="" asp-area="" asp-controller="Workout" asp-action="Dashboard">Dashboard</a>
                    </li>
                    <li>
                        <img src="/Images/userv.png" alt="">
                        <a class="" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Profile</a>
                    </li>
                </ul>
            }
            else
            {
                <!-- Användaren är utloggad -->
                <ul>
                    <li>
                        <img src="/Images/runv.png" alt="">
                        <a class="" asp-controller="Exercise" asp-action="ExerciseShow">Exercises</a>
                    </li>
                    <li class="">
                        <img src="/Images/add-userv.png" alt="">
                        <a class="" asp-area="Identity" asp-page="/Account/Register">Register</a>
                    </li>
                    <li class="">
                        <img src="/Images/log-inv.png" alt="">
                        <a class="" asp-area="Identity" asp-page="/Account/Login">Login</a>
                    </li>
                </ul>
            }





        </nav>
        <header>
            <nav class="mobile">
                @if (SignInManager.IsSignedIn(User))
                {
                    <ul>
                        <li>
                            <img src="/Images/home.png" alt="">
                            <a class="" asp-area="" asp-controller="Home" asp-action="IndexLoggedIn">Home</a>
                        </li>
                        <li>
                            <img src="/Images/activity.png" alt="">
                            <a class="" asp-area="" asp-controller="Workout" asp-action="Index">Activity</a>
                        </li>
                        <li>
                            <img src="/Images/plus.png" alt="">
                            <a class="" asp-area="" asp-controller="Workout" asp-action="Create">Add Data</a>
                        </li>
                        <li>
                            <img src="/Images/graph.png" alt="">
                            <a class="" asp-area="" asp-controller="Workout" asp-action="Dashboard">Dashboard</a>
                        </li>
                        <li>
                            <img src="/Images/user.png" alt="">
                            <a class="" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Profile</a>
                        </li>
                    </ul>
                }
                else
                {
                    <ul>
                        <li>
                            <img src="/Images/run.png" alt="">
                            <a class="" asp-controller="Exercise" asp-action="ExerciseShow">Exercises</a>
                        </li>
                        <li class="">
                            <img src="/Images/add-user.png" alt="">
                            <a class="" asp-area="Identity" asp-page="/Account/Register">Register</a>
                        </li>
                        <li class="">
                            <img src="/Images/log-in.png" alt="">
                            <a class="" asp-area="Identity" asp-page="/Account/Login">Login</a>
                        </li>

                    </ul>
                }





            </nav>

        </header>
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>
    <footer class="mt-5">
        
        <p class="center">&copy; Copyright 2024 - Design Edwin Lundbäck</p>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
