@model programmeringmed.NetProjekt.Models.WorkoutModel

@{
    ViewData["Title"] = "Edit";
}<h1>Edit</h1>
<h1>Edit</h1>

<h4>WorkoutModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ExerciseFormId" /> <!-- Hidden field for ExerciseForm -->

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <input asp-for="Comment" class="form-control" />
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating">Rating:</label>
                <span>Min</span>
                <input asp-for="Rating"  type="range" min="1" max="5" value="3" class="slider" id="rating" name="rating" />
                <span>Max</span>
            </div>
            <div class="form-group">
                <label asp-for="Length" class="control-label"></label>
                <input asp-for="Length" class="form-control" />
                <span asp-validation-for="Length" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Completed" class="control-label"></label>
                <input asp-for="Completed" type="checkbox" class="form-check-input" />
                <span asp-validation-for="Completed" class="text-danger"></span>
            </div>

            <div id="bodyPartField" class="form-group" style="display: none;"> <!-- Hide initially -->
                <label asp-for="BodyPartId" class="control-label"></label>
                <select asp-for="BodyPartId" class="form-control" asp-items="ViewBag.BodyPartId"></select>
                <span asp-validation-for="BodyPartId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var exerciseFormIdField = document.querySelector("#ExerciseFormId");
            var bodyPartField = document.querySelector("#bodyPartField");

            // Function to toggle visibility of bodyPartField
            function toggleBodyPartFieldVisibility() {
                if (exerciseFormIdField.value === "2") { // If ExerciseFormId is 2 (gym)
                    bodyPartField.style.display = "block"; // Show bodyPartField
                } else {
                    bodyPartField.style.display = "none"; // Hide bodyPartField
                }
            }

            // Toggle visibility initially
            toggleBodyPartFieldVisibility();

            // Toggle visibility whenever ExerciseFormId changes
            exerciseFormIdField.addEventListener("change", toggleBodyPartFieldVisibility);
        });
    </script>
}
