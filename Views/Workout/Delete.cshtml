@model programmeringmed.NetProjekt.Models.WorkoutModel

@{
    ViewData["Title"] = "Delete";
}

<h3>Are you sure you want to delete this session?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Date for session
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            Type of workout
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ExerciseForm.ExerciseForm)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Comment)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Comment)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rating)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rating)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Length)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Length)
        </dd>

        @if (Model.ExerciseForm.ExerciseForm == "Kondition")
        {
            <!-- Dölj skiingId om ExerciseForm är Kondition -->
            <style>
                .hide-skiingId {
                    display: none;
                }
            </style>
        }
        else if (Model.ExerciseForm.ExerciseForm == "2")
        {
            <!-- Dölj BodyPartId -->
            <style>
                .hide-bodyPartId {
                    display: none;
                }
            </style>
        }
        else if (Model.ExerciseForm.ExerciseForm == "Skidåkning")
        {
            <!-- Dölj BodyPartId -->
            <style>
                .hide-bodyPartId {
                    display: none;
                }
            </style>
        }

        <!-- För BodyPartId -->
        <dt class="col-sm-2 hide-bodyPartId">
            @Html.DisplayNameFor(model => model.BodyPart)
        </dt>
        <dd class="col-sm-10 hide-bodyPartId">
            @Html.DisplayFor(model => model.BodyPart.BodyPart)
        </dd>

        <!-- För SkiingId -->
        <dt class="col-sm-2 hide-skiingId">
            @Html.DisplayNameFor(model => model.SkiingId)
        </dt>
        <dd class="col-sm-10 hide-skiingId">
            @Html.DisplayFor(model => model.SkiingId)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn deleteBtn" /> 
    </form>
    <div class="mt-2 d-flex align-items-center">
        <a asp-action="Details" asp-route-id="@Model.Id" class="d-flex align-items-center">
            <img class="mx-2" src="/Images/arrow.png" alt="">
            <span>Go Back</span>
        </a>
    </div>
</div>
